<h3><%= @campaign.title %></h3>

<% if current_user == @campaign.user %>
  <div class="edit-button btn">
    <%= link_to 'Edit Campaign Details', edit_campaign_path %>
  </div>
<% end %>

<!-- TODO: For each of these displays, post a message if they're empty -->
<!-- All the chapters for the campaign -->
<%= render partial: 'chapters/chapter_listing',
  locals: {
           campaign: @campaign,
           chapter: @chapter,
           chapters: @chapters
          }
%>

<!-- All the setting details for the campaign -->
<%= render partial: 'setting_details/setting_detail_listing',
  locals: {
           setting_details: @setting_details,
           setting_detail: @setting_detail,
           campaign: @campaign
          }
%>

<!-- All the player characters for the campaign -->
<%= render partial: 'characters/party', locals: {player_characters: @player_characters} %>

<!-- All the npc characters for the campaign -->
<%= render partial: 'characters/npc_roster', locals: {gm_characters: @gm_characters} %>
