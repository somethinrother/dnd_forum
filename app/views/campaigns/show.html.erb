<h3><%= @campaign.title %></h3>

<% if current_user == @campaign.user %>
  <div class="edit-button btn">
    <%= link_to 'Edit Campaign Details', edit_campaign_path %>
  </div>
<% end %>

<!-- TODO: Store this in a partial -->
<h4>Chapters</h4>
<% @chapters.each do |number, title| %>
  <div class='chapter-tab'> <%= number %>. <%= title %> </div>
<% end %>

<!-- TODO: Store this in a partial -->
<h4>Setting Details</h4>
<% @setting_details.each do |title, details| %>
  <div class='setting-bullet'> <%= title %> - <%= details %> </div>
<% end %>

<!-- TODO: Store this in a partial -->
<h4>Available Loot</h4>
<% @loot.each do |item| %>
  <h5><%= item['item'].titleize %></h5>
  <% item.each do |title, detail| %>
    <% unless title == 'item' %>
      <div class="item-field">
        <%= title %>: <%= detail %>
      </div>
    <% end %>
  <% end %>
<% end %>
