<%= form_for [campaign, chapter] do |f| %>
  <div class='field'>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class='field'>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <%= f.submit 'Submit', class: "chapter-submit" %>
<% end %>

<a href="#" class='new-chapter-close hidden'>Close</a>
