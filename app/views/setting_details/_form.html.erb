<%= form_for [campaign, setting_detail] do |f| %>
  <div class='field'>
    <%= hidden_field_tag 'campaign_id', campaign.id %>
  </div>
  <div class='field'>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class='field'>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <%= f.submit 'Submit', class: "form-submit" %>
<% end %>
